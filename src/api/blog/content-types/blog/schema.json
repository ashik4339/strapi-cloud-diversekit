{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "content": {
      "type": "blocks",
      "required": true
    },
    "postDate": {
      "type": "date",
      "required": true
    },
    "readingTime": {
      "type": "integer"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "options": {
        "lowercase": true,
        "decamelize": false,
        "separator": "-",
        "length": 200
      }
    }
  }
}
