{
  "kind": "collectionType",
  "collectionName": "testimonials",
  "info": {
    "singularName": "testimonial",
    "pluralName": "testimonials",
    "displayName": "Testimonial"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "star": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 5
    },
    "content": {
      "type": "text",
      "required": true
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "name": {
      "type": "string",
      "required": true
    },
    "profession": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "options": {
        "lowercase": true,
        "decamelize": false,
        "separator": "-",
        "length": 200
      }
    }
  }
}
