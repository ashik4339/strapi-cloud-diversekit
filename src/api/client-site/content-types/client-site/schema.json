{
  "kind": "collectionType",
  "collectionName": "client_sites",
  "info": {
    "singularName": "client-site",
    "pluralName": "client-sites",
    "displayName": "Client Site"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "url": {
      "type": "string",
      "required": true,
      "regex": "^https?:\\/\\/(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b([-a-zA-Z0-9()@:%_\\+.~#?&//=]*)$"
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "options": {
        "lowercase": true,
        "decamelize": false,
        "separator": "-",
        "length": 200
      }
    }
  }
}
